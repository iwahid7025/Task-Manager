{
  // TypeScript configuration for the main React application
  // This configuration is specifically tailored for the source code in the src/ directory
  // It enables modern TypeScript features and strict type checking for better code quality
  
  "compilerOptions": {
    // Build optimization - stores incremental compilation info for faster rebuilds
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    
    // Target modern JavaScript (ES2022) for better performance and smaller bundles
    // Assumes modern browser support (most browsers from 2017+)
    "target": "ES2022",
    
    // Enable modern class field behavior to match JavaScript standards
    "useDefineForClassFields": true,
    
    // Include standard library definitions for ES2022, DOM, and DOM iteration
    // This provides type definitions for modern JS features and browser APIs
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    
    // Use ESNext modules for maximum compatibility with bundlers like Vite
    "module": "ESNext",
    
    // Include Vite-specific type definitions for import.meta.env, etc.
    "types": ["vite/client"],
    
    // Skip type checking of declaration files for faster compilation
    // This is safe when using well-tested third-party libraries
    "skipLibCheck": true,

    /* Bundler mode - Optimizations for Vite and other modern bundlers */
    
    // Use modern module resolution suitable for bundlers
    "moduleResolution": "bundler",
    
    // Allow importing TypeScript files with extensions (Vite handles this)
    "allowImportingTsExtensions": true,
    
    // Preserve import/export syntax exactly as written
    "verbatimModuleSyntax": true,
    
    // Treat all files as modules (even without import/export)
    "moduleDetection": "force",
    
    // Don't emit JavaScript files (Vite handles compilation)
    "noEmit": true,
    
    // Use React 17+ JSX transform (no need to import React in every file)
    "jsx": "react-jsx",

    /* Strict Type Checking - Enable all strict mode options for better code quality */
    
    // Enable all strict type-checking options
    "strict": true,
    
    // Report errors on unused local variables
    "noUnusedLocals": true,
    
    // Report errors on unused function parameters
    "noUnusedParameters": true,
    
    // Report errors for fallthrough cases in switch statements
    "noFallthroughCasesInSwitch": true,
    
    // Require explicit side effect imports for better tree-shaking
    "noUncheckedSideEffectImports": true
  },
  
  // Include all TypeScript and TSX files in the src directory
  // This tells TypeScript which files to compile and type-check
  "include": ["src"]
}
